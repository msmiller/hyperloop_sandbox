<p id="notice"><%= notice %></p>

<h1>Blivots</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blivots.each do |blivot| %>
      <tr>
        <td><%= blivot.name %></td>
        <td><%= blivot.description %></td>
        <td><%= blivot.priority %></td>
        <td><%= link_to 'Show', blivot %></td>
        <td><%= link_to 'Edit', edit_blivot_path(blivot) %></td>
        <td><%= link_to 'Destroy', blivot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blivot', new_blivot_path, :class => "ui button" %>
